body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f0f0f0;
}

.container {
    max-width: 600px;
    margin: 20px auto;
    padding: 20px;
    background-color: white;
    border-radius: 5px;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
}

h1 {
    text-align: center;
    color: #333;
}

.search-container {
    display: flex;
    margin-bottom: 20px;
}

input[type="text"] {
    flex-grow: 1;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ddd;
    border-radius: 4px 0 0 4px;
}

button {
    padding: 10px 20px;
    font-size: 16px;
    background-color: #4CAF50;
    color: white;
    border: none;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
}

button:hover {
    background-color: #45a049;
}

.weather-info {
    background-color: #e9f7ef;
    padding: 20px;
    border-radius: 4px;
    margin-bottom: 20px;
}

.error-message {
    color: red;
    margin-bottom: 20px;
}

.favorites {
    background-color: #f9f9f9;
    padding: 20px;
    border-radius: 4px;
}

.favorites ul {
    list-style-type: none;
    padding: 0;
}

.favorites li {
    margin-bottom: 10px;
}

.favorites a {
    color: #4CAF50;
    text-decoration: none;
}

.favorites a:hover {
    text-decoration: underline;
}
