<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Weather Dashboard</title>
  <link rel="stylesheet" href="styles.css">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
  <script src="app.js"></script>
</head>
<body ng-controller="WeatherController as weatherCtrl">
  <div class="container">
    <h1>Weather Dashboard</h1>
    <div class="search-bar">
      <input type="text" ng-model="weatherCtrl.city" placeholder="Enter city name">
      <button ng-click="weatherCtrl.fetchWeather()">Get Weather</button>
    </div>

    <div class="weather-display" ng-if="weatherCtrl.weatherData">
      <h2>{{ weatherCtrl.weatherData.name }}</h2>
      <p>Temperature: {{ weatherCtrl.weatherData.main.temp }}Â°C</p>
      <p>Humidity: {{ weatherCtrl.weatherData.main.humidity }}%</p>
      <p>Conditions: {{ weatherCtrl.weatherData.weather[0].description }}</p>
    </div>

    <div class="error-message" ng-if="weatherCtrl.error">
      <p>{{ weatherCtrl.error }}</p>
    </div>

    <!-- Bonus: Favorite Cities -->
    <div class="favorite-cities" ng-if="weatherCtrl.favoriteCities.length > 0">
      <h3>Favorite Cities</h3>
      <ul>
        <li ng-repeat="city in weatherCtrl.favoriteCities | orderBy">
          <a href="#" ng-click="weatherCtrl.fetchWeather(city)">{{ city }}</a>
        </li>
      </ul>
    </div>

    <button ng-click="weatherCtrl.addToFavorites()" ng-if="weatherCtrl.weatherData && !weatherCtrl.isFavorite(weatherCtrl.weatherData.name)">
      Add {{ weatherCtrl.weatherData.name }} to Favorites
    </button>
  </div>
</body>
